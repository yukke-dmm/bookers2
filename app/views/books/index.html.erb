
<% if user_signed_in? %>
<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>  <%= link_to "Show", book_path(book.id) %></td>
        <td>  <%= link_to "Edit", book_path(book.id) %></td>
        <td>  <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are You Sure?'} %></td>
      </tr>
    </tbody>
  <% end %>
